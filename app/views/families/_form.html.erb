<%= simple_form_for family, html: { class: "form family" } do |f| %>
  <%= form_error_notification(family) %>

  <%= f.input :name, html5: true, input_html: { autofocus: true } %>
  <%= link_to "Cancel", families_path, class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>
