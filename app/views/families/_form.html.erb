<%= simple_form_for family, html: { class: "family form" } do |f| %>
  <% if family.errors.any? %>
    <div class="error-message">
      <%= family.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :name, input_html: { autofocus: true } %>
  <%= link_to "Cancel", families_path, class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>
